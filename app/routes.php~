<?php

    use Facebook\FacebookRequest;
    use Facebook\GraphUser;
    use Facebook\FacebookRequestException;
/*
|--------------------------------------------------------------------------
| Application Routes
|--------------------------------------------------------------------------
|
| Here is where you can register all of the routes for an application.
| It's a breeze. Simply tell Laravel the URIs it should respond to
| and give it the Closure to execute when that URI is requested.
|
*/

Route::get('/', function()
{
    return View::make('layouts.start');
});
Route::get('page', function()
{
    return View::make('footer');
});
Route::get('page/{name}/{age}', function($name, $age)
{
    return "Hello $name with age $age";
})->where('name','[a-z]+')
  ->where('age','[0-9]{2,3}');
  
Route::get('fb', 'FacebookController@index');
Route::get('successfb', 'FacebookController@success');
Route::get('prosto', function()
{
    return "Hello";
});

